<h1 class="text-center mt-4">Create a new Category</h1>
<div class="row mt-5 justify-content-center">
  <div class="col-10">
    <%= render 'articles/shared/errors', obj: @category %>
    <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-dark-subtle rounded", local: true, data: { turbo: false }) do |f| %>
    <div class="row mb-3">
      <%= f.label :name, "Category Name", class: "col-sm-2 col-form-label text-light" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
      </div>
    </div>

    <div class="text-center mb-4">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
    <% end %>
  </div>

  <div class="text-center mb-3">
    <%= link_to '[ Cancel and return to Articles ]', articles_path, class: "text-dark-emphasis" %>
  </div>
</div>