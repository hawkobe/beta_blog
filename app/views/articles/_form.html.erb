<div class="row mt-5 justify-content-center">
  <div class="col-10">
    <%= render 'articles/shared/errors' %>
    <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-dark-subtle rounded", local: true, data: { turbo: false }) do |f| %>
    <div class="row mb-3">
      <%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Article Title" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
      <div class="col-sm-10">
        <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Description of Article" %>
      </div>
    </div>
    <div class="text-center mb-4">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to '[ Cancel and return to Articles ]', articles_path, class: "text-dark-emphasis" %>
  </div>
</div>